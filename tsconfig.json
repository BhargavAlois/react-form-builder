{
  "compilerOptions": {
    "declaration": true, // Generates .d.ts files
    "declarationDir": "dist/types", // Output directory for .d.ts files
    "rootDir": "lib", // Root directory of your source files
    "outDir": "dist", // Output directory for compiled JS files
    "jsx": "react-jsx", // For React JSX support
    "module": "ESNext", // Use ESM modules
    "target": "ESNext", // Target modern JavaScript
    "moduleResolution": "node", // Use Node.js module resolution
    "esModuleInterop": true, // Enable ES module interop
    "strict": true // Enable strict type-checking
  },
  "include": [
    "lib/**/*"
, "lib/types.ts"  ],
  "exclude": [
    "node_modules",
    "dist"
  ]
}